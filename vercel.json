{
  "version": 2,
  "builds": [
    { "src": "front/**/*",    "use": "@vercel/static" },
    { "src": "api/**/*.js",   "use": "@vercel/node" },
    { "src": "app.py",        "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/savePlayer", "dest": "/api/savePlayer.js" },
    { "src": "/api/(.*)",       "dest": "/app.py" },
    { "src": "/",               "dest": "/front/onboarding.html" },
    { "src": "/(.*)",           "dest": "/front/$1" }
  ]
}

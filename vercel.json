{
  "version": 2,
  "builds": [
    {
      "src": "front/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "back/app.py",
      "use": "@vercel/python",
      "config": { "maxDuration": 10 }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "back/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/front/$1"
    }
  ]
}

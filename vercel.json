{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "builds": [
    {
      "src": "front/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxDuration": 10 }
    }
  ],
  "routes": [
    {
      "src": "/api/savePlayer",
      "dest": "/api/savePlayer.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/",
      "dest": "/front/onboarding.html"
    },
    {
      "src": "/(.*)",
      "dest": "/front/$1"
    }
  ]
}
